<% flat = data.flats[owner] %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');"></div>
<div class="header-flat">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="header-flat-details">
          <div class="header-flat-owner">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle img-sm" %>
            <p><%= owner %></p>
          </div>
          <div class="header-flat-name">
            <h1><%= flat.description %></h1>
            <p><%= flat.city_name %></p>
            <p class="rating">
              <% flat.rating.times do %>
              <i class="fa fa-star" style="color: #FFB400"></i>
              <% end %>
              <% (5-flat.rating).times do %>
              <i class="fa fa-star" style="color: #cacccd"></i>
              <% end %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <form>
        <h4>Book this flat</h4>
          <div class="form-input">
            <div class="form-group">
              <div class="row">
                <div class="col-xs-6">
                  <input type="text" class="form-control" id="checkin" placeholder="checkin">
                </div>
                <div class="col-xs-6">
                  <input type="text" class="form-control" id="checkout" placeholder="checkout">
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <select class="form-control" id="guests">
              <option>1 guest</option>
              <option>2 guests</option>
              <option>3 guests</option>
            </select>
          </div>
          <button type="submit" class="btn btn-danger form-control">Book it</button>
        </form>
      </div>
    </div>
  </div>
</div>
<div class="flat-description">
  <h4>About this flat</h4>
  <p><%= flat.details %></p>
</div>
